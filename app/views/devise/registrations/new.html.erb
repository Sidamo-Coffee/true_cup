<div class="max-w-md mx-auto py-10">
  <h1 class="text-2xl font-semibold mb-6 text-center">新規登録</h1>

  <%= form_for(resource,
               as: resource_name,
               url: user_registration_path,
               html: { class: "space-y-4" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :name, "お名前", class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :name,
            class: "w-full rounded border px-3 py-2",
            autocomplete: "name" %>
    </div>

    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full rounded border px-3 py-2" %>
    </div>

    <div>
      <div class="flex items-baseline gap-2 mb-1">
        <%= f.label :password, "パスワード", class: "block text-sm font-medium" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500">
            （<%= @minimum_password_length %>文字以上）
          </p>
        <% end %>
      </div>
      <%= f.password_field :password,
            autocomplete: "new-password",
            class: "w-full rounded border px-3 py-2" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "パスワード（確認用）",
            class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "w-full rounded border px-3 py-2" %>
    </div>

    <div class="pt-2">
      <%= f.submit "登録する",
            class: "w-full rounded bg-emerald-600 px-4 py-2 text-white font-semibold hover:bg-emerald-700" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>