<div class="max-w-3xl mx-auto py-10 px-4 space-y-6">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h1 class="text-2xl font-semibold">コーヒー記録（詳細）</h1>
      <p class="text-sm text-gray-500 mt-1"><%= @coffee_log.drank_on %></p>
    </div>

    <div class="flex gap-2">
      <%= link_to "編集", edit_coffee_log_path(@coffee_log), class: "px-3 py-2 rounded border text-sm hover:bg-gray-50" %>
      <%= link_to "削除", coffee_log_path(@coffee_log),
                  data: { turbo_method: :delete, turbo_confirm: "この記録を削除します。よろしいですか？" },
                  class: "px-3 py-2 rounded border text-sm text-red-700 hover:bg-red-50" %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 space-y-4">
    <div class="text-sm text-gray-700">
      <span class="text-gray-500">場所：</span>
      <%= @coffee_log.place_cafe? ? "お店" : (@coffee_log.place_home? ? "自宅" : "その他") %>
      <% if @coffee_log.place_cafe? && @coffee_log.cafe_name.present? %>
        （<%= @coffee_log.cafe_name %>）
      <% end %>
    </div>

    <div>
      <p class="text-gray-500 text-sm">商品名 / メニュー名</p>
      <p class="text-lg font-semibold"><%= @coffee_log.coffee_name.presence || "（未入力）" %></p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
      <div class="p-4 rounded border">
        <p class="text-gray-500">焙煎度</p>
        <p class="font-semibold"><%= @coffee_log.roast_level %></p>
      </div>
      <div class="p-4 rounded border">
        <p class="text-gray-500">好みの評価</p>
        <p class="font-semibold"><%= "★" * @coffee_log.overall_rating %>（<%= @coffee_log.overall_rating %>）</p>
      </div>
      <div class="p-4 rounded border">
        <p class="text-gray-500">酸味</p>
        <p class="font-semibold"><%= ["弱い", "普通", "強い"][@coffee_log.acidity] %></p>
      </div>
      <div class="p-4 rounded border">
        <p class="text-gray-500">苦み</p>
        <p class="font-semibold"><%= ["弱い", "普通", "強い"][@coffee_log.bitterness] %></p>
      </div>
    </div>

    <% if @coffee_log.memo.present? %>
      <div>
        <p class="text-gray-500 text-sm">メモ</p>
        <p class="text-gray-800 whitespace-pre-wrap"><%= @coffee_log.memo %></p>
      </div>
    <% end %>
  </div>

  <div class="flex gap-3">
    <%= link_to "一覧へ戻る", coffee_logs_path, class: "px-4 py-2 rounded border" %>
    <%= link_to "新規記録", new_coffee_log_path, class: "px-4 py-2 rounded bg-amber-700 text-white" %>
  </div>
</div>
