<header class="border-b border-stone-200 bg-amber-50">
  <div class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between gap-4">
    <!-- ロゴ -->
    <div class="flex items-baseline gap-2">
      <% if user_signed_in? %>
        <%= link_to mypage_path, class: "text-lg md:text-xl font-semibold tracking-tight text-stone-900" do %>
          TrueCup
        <% end %>
      <% else %>
        <%= link_to root_path, class: "text-lg md:text-xl font-semibold tracking-tight text-stone-900" do %>
          TrueCup
        <% end %>
      <% end %>
      <span class="hidden sm:inline text-[11px] text-stone-500">
        コーヒーの「好き」が見つかる味覚診断アプリ
      </span>
    </div>

    <!-- ナビゲーション -->
    <nav class="flex items-center gap-3 text-xs md:text-sm">
      <% if user_signed_in? %>
        <%= link_to "マイページ", mypage_path, class: "text-stone-700 hover:text-stone-900" %>
        <%= button_to "ログアウト",
              destroy_user_session_path,
              method: :delete,
              form: { data: { turbo: false } },
              class: "rounded bg-slate-200 px-3 py-1 text-sm hover:bg-slate-300" %>
      <% else %>
        <%= link_to "このアプリについて", root_path, class: "hidden sm:inline text-stone-700 hover:text-stone-900" %>
        <%= link_to "ログイン", new_user_session_path, class: "text-stone-700 hover:text-stone-900" %>
        <%= link_to "無料で始める", new_user_registration_path, 
              class: "inline-flex items-center justify-center rounded-full 
              px-3 py-1.5 md:px-4 md:py-2 text-xs md:text-sm font-semibold 
              text-amber-50 bg-amber-700 hover:bg-amber-800 transition" %>
      <% end %>
    </nav>
  </div>
</header>