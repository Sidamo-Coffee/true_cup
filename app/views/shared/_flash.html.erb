<% flash.each do |type, message| %>
  <% next if message.blank? %>

  <% css_class =
    case type.to_sym
    when :notice
      "mb-4 rounded-md border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-900"
    when :alert, :error
      "mb-4 rounded-md border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900"
    else
      "mb-4 rounded-md border border-stone-200 bg-stone-50 px-4 py-3 text-sm text-stone-800"
    end
  %>

  <div class="<%= css_class %>">
    <p><%= message %></p>
  </div>
<% end %>